{
  "name": "@iocium/rdap-lite",
  "version": "1.0.1",
  "description": "Lightweight RDAP client with normalized output, caching, CLI, and browser compatibility.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "rdap-lite": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "jest --runInBand --no-cache",
    "test:coverage": "jest --coverage --runInBand --no-cache",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "update-bootstraps": "npm run build && node dist/cli.js update-bootstraps",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "rdap",
    "whois",
    "domain",
    "ip",
    "cli",
    "typescript",
    "serverless",
    "cloudflare-workers"
  ],
  "author": "iocium",
  "license": "MIT",
  "browser": "dist/browser/index.global.js",
  "unpkg": "dist/browser/index.global.js",
  "jsdelivr": "dist/browser/index.global.js",
  "dependencies": {
    "@iocium/cachekit": "^1.1.0",
    "ajv": "^8.17.1",
    "commander": "^14.0.0",
    "ipaddr.js": "^2.0.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/validator": "^13.15.2",
    "auto-changelog": "^2.5.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3"
  }
}
